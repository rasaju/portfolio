.slider
    background url(../images/zero_ani_red/pattern_mi.png) repeat
    //position absolute
    width 100vw
    height 580px
    display flex
    justify-content center
    align-items center
    flex-wrap wrap
    div:nth-child(3)
        width 100vw
        height 60px
        flex none
        display flex
        justify-content center
        a
            display inline-flex
            width 300px
            height 60px 
            box-sizing border-box
            line-height 58.5px
            font-size 20px
            color #fff
            background-color #f54d4d
            border 3px solid #f54d4d
            border-radius 30px
            text-decoration-line none
            margin-top -30px
            justify-content center
            &:hover,&:active
                color #f54d4d
                background-color #fff
    
    
    .zero_infro
        width 40vw
        height auto
        display flex
        flex-flow column
        align-items center
        justify-content center
        
        .zero_wording
            position relative
            width 35vw
            height .66*@width
            max-width 500px
            max-height 330px
            margin-bottom 20px
            flex none
            &>img
                width 100%
                height auto
                display block
                position absolute
                &:nth-child(1)
                    z-index 1
                &:nth-child(2)
                    opacity 0
                    z-index 2
                    animation light 2s cubic-bezier(.86,.01,.25,1) alternate infinite
        #timer
            flex none
            position relative
            width 300px
            height auto
            padding 5px
            background-color #fff
            color #3c3c3c
            font-size 1em
            text-align center
            border 1px dashed #f44d4d 
            span
                font-size 1.5em
                color #f54d4d
                font-weight 700
                margin 0 3px 0 3px
                &:nth-child(1)
                    margin-left 0

    .zero_ani
        position relative
        width 50vw
        min-width 320px
        max-width 580px
        height 0.85* @width
        max-height 500px
        &>img
            display block
            position absolute
            &:nth-child(1)
                width 100%
                height auto
            &:nth-child(3),&:nth-child(4),&:nth-child(5)
                width 57.6%
                height auto
                top 20%
                left 22.5%
            &:nth-child(2)
                width 20%
                height auto
                opacity 1
                top 30%
                left 41%
                transform rotate(0deg) scale(1,1)
                transform-origin center center
                animation coin 3s .2s ease infinite
            &:nth-child(3),&:nth-child(5)
                animation shake 3s .2s cubic-bezier(.77,.02,.91,.75) infinite
            &:nth-child(4)
                animation shakeKeyboard 3s .2s cubic-bezier(.77,.02,.91,.75) infinite
    
  @keyframes light {
    0%{opacity:0;}
    100%{opacity:100;}
}            

@keyframes shake {
    0%{top:20%;}
    20%{top:22%;}
    21%{top:21.4%;}
    22%{top:21.6%;}
    37%{top:21.6%;}
    45%{top:19.7%;}
    50%{top:20%;}
    100%{top:20%;}
}
@keyframes shakeKeyboard {
    0%{top:20%;}
    24%{top:22%;}
    26%{top:21.4%;}
    28%{top:21.6%;}
    37%{top:21.6%;}
    45%{top:19.7%;}
    50%{top:20%;}
    100%{top:20%;}
}
@keyframes coin {
     0%{opacity:1;top:35%;left:41%;transform:rotate(0deg) scale(1,1);}
    24%{opacity:1;top:35%;left:41%;transform:rotate(0deg) scale(1,1);}
    29%{opacity:1;top:70%;left:41%;transform:rotate(1deg) scale(1,1);}
    30%{opacity:1;top:71%;left:41%;transform:rotate(3deg) scale(1.1,.8);}
    33%{opacity:1;top:63%;left:36%;transform:rotate(-3deg) scale(.8,1);}
    40%{opacity:1;top:70%;left:34%;transform:rotate(-10deg) scale(1,.95);}
    45%{opacity:1;top:67%;left:32%;transform:rotate(-20deg) scale(1,1);}
    55%{opacity:0;top:68%;left:30%;transform:rotate(-23deg) scale(1,1);}
    100%{opacity:0;top:68%;left:30%;transform:rotate(-30deg) scale(1,1);}
}
body{
  background: #f5f5f5;
}
*{
    margin: 0;
    padding: 0;
}
@media screen and (max-width: 999px)and (min-width: 640px)  
    .slider
        height 490px
        .zero_infro
            width 50vw
            .zero_wording
                width 40vw
                height 0.7* @width
        .zero_ani
            width 50vw
            height 0.85* @width

@media screen and (max-width: 639px)
    .slider
        width 100vw
        height auto
        justify-content flex-start
        align-items center
        flex-flow column
        .zero_infro
            flex none
            width 100vw
            transform translateY(-20vw)

            .zero_wording
                width 90vw
                height 0.66* @width
                margin-bottom 5px
        .zero_ani
            flex none
            width 100vw
            height 0.85* @width




        