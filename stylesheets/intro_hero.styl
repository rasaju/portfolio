body
    background-color #e1e1e1
    overflow-y scroll
    overflow-x hidden 
    div.padding
        margin 30px 0 0  50px
    h1.pageTitle
        position relative
        display inline-block
        font-size 5em
        margin-top 30px
        margin-left 50px
        color colorBlack
        z-index 99
        font-weight 400
        &.white
            color colorWhitePure
    a.btn_blue_m
        position relative
        display inline-block
        line-height 1.8em
        text-align center
        transition .3s ease
        &.back
            width 10vw
            left 50%
            margin-left -5vw
            margin-bottom 30vw
            margin-top 50px
        &:after
                content ''
                display block
                position absolute
                width 0%
                height 1px
                left 50%
                bottom -2px
                background-color colorBlue
                opacity 0
                transition .5s ease
        &:hover,:active
            color colorBlue
            &:after
                content ''
                display block
                position absolute
                width 94%
                height 1px
                left 3%
                bottom -2px
                background-color colorBlue
                opacity 1
                transition .5s ease
        &.machix
            color colorWhitePure
            &:after
                background-color colorWhitePure
            &:hover,:active
                color #efea80
                &:after
                    background-color #efea80
        &.machix.back
            color colorWhitePure
.frame_white
    border-radius 1vw
    border .8px solid #3c3c3c

#header_hero
    width 100vw
    height 62.5vw
    position relative
    z-index 1
    overflow hidden
    img
        display block
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        &:first-child
            z-index 5
        &:nth-child(2)
            z-index 4
            opacity 0
            animation slowUp .8s 1.2s cubic-bezier(.42,.06,.58,1.19) forwards,shake 2s 2.6s ease-in-out infinite
            transform translateY(0px)
        &:nth-child(3)
            z-index 3
            opacity 0
            animation fastUp .8s .6s cubic-bezier(.42,.06,.58,1.19) forwards
            transform translateY(0px)
        &:last-child
            z-index 2
       
            
@keyframes  fastUp {
  0%{transform:translateY(25px);opacity:0;}
  100%{transform:translateY(0);opacity:1;}
}
@keyframes  slowUp {
  0%{transform:translateY(10px);opacity:0;}
  100%{transform:translateY(0);opacity:1;}
}
@keyframes  shake {
  0%{transform:translateY(-2px);}
  50%{transform:translateY(0);}
  100%{transform:translateY(-2px);}
}

