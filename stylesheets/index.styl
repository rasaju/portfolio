colorGreen = #72d533;
colorBlack = #2b2b2b;
colorGrayDeep = #929292;
colorWhite = #fafafa;
colorWhitePure = #ffffff;
colorBlue = #1dc5c9;
colorBlueLight = #3fd9da;
colorGray = #e8e8e8;
colorShadow = rgba(0,0,0,.15)
colorShadowLight = rgba(0,0,0,.1)
body
    background-color colorWhite
.pageList
    display flex
    flex-direction column
    flex-wrap wrap
    justify-content center
    align-items center
    padding 30px 50px
    .pageLink
        flex  none
        width 45vw
        max-width 700px
        min-width  300px
        margin 40px
        height auto
        position relative
        &:first-child>div.pic
            background-image url('../images/cover/ci.png')
        &:nth-child(2)>div.pic
            background-image url('../images/cover/app.png')
        &:nth-child(3)>div.pic
            background-image url('../images/cover/newHERO.png')
        &:nth-child(4)>div.pic
            background-image url('../images/cover/event.png')
        &:nth-child(5)>div.pic
            background-image url('../images/cover/data.png')
        &:nth-child(6)>div.pic
            background-image url('../images/cover/logo_pinkbg.png')
        &:nth-child(7)>div.pic
            background-image url('../images/cover/seenews.png')
        div.pic
            position relative
            flex none
            width 100%
            height 0
            padding-top 60%
            background-size cover
            background-position center center 
            box-shadow 0px 2px 10px -2px rgba(0,0,0,.1)
            border-radius 30px
        h2
            position relative
            color colorGrayDeep
            margin-top 20px
            text-align center
        &:hover,:active
            transform translateY(-6px)
            transition .5s ease
            
            &>div.pic
                transform scale(1.02)
                //background-size 120% 120%
                transition-delay .2s
                transition .5s ease
                box-shadow 2px 15px 15px -4px rgba(0,0,0,.15),0px 10px 20px -2px rgba(0,0,0,.1)