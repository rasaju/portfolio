		line-height lh=3em
		text-align center	
		position relative
		width 140px
		left 50%
		margin-left -(@width / 2)
		margin-top 80px
		margin-bottom 20px
		&:before
			content ''
			display block
			position absolute
			width calc(45vw - 70px)
			height .14em
			background-color colorBlue
			left calc(70px - 45vw)
			top (lh/2-@height/2)
		&:after
			content ''
			display block
			position absolute
			width calc(45vw - 70px)
			height .14em
			background-color colorBlue
			right calc(70px - 45vw)
			top (lh/2-@height/2)
//loading animation

.loading_ani
	flex none
	display flex
	width 100%
	height 120px
	justify-content center
	
	div
  		width 20px
  		height 20px
  		margin-top 30px
  		background-color colorBlue
  		//1,0,0,1
  		//animation loading_ani 2s infinite cubic-bezier(1,.42,.44,.99)
  		animation loading_ani 2s infinite cubic-bezier(1,0,0,1)




@keyframes loading_ani {
  0% {
    transform: perspective(900px) rotateX(0deg) rotateY(0deg);
  }
  50% {
    transform: perspective(900px) rotateX(-180.1deg) rotateY(0deg) scaleY(.8) scaleX(.8);
    background:#A0F3D8;
  }
  100% {
    transform: perspective(900px) rotateX(-180deg) rotateY(-179.9deg);
  }
}





